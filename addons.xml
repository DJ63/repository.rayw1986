<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="context.genesis" name="Genesis Context Menu Tools" version="1.1.2" provider-name="RayW1986">
  <requires>
    <import addon="xbmc.python" version="2.20.0"/>
  </requires>
    <extension point="kodi.context.item" library="addon.py">
      <item>
        <label>32000</label>
        <visible>StringCompare(ListItem.dbtype,movie) | StringCompare(ListItem.dbtype,tvshow) | StringCompare(ListItem.dbtype,season) | StringCompare(ListItem.dbtype,episode)</visible>
      </item>
    </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Genesis Library Options</summary>
    <description lang="en">This context menu plugin will allow you to use many Genesis tools while you are in your Kodi library.</description>
    <platform>all</platform>
    <forum></forum>
    <source></source>
  </extension>
</addon>

<addon id="plugin.video.iwn"
       name="Indy Wrestling Network"
       version="1.0.3"
       provider-name="RayW1986">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               	library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Collection of Independent Wrestling Promotions</summary>
        <description>The Indy Wrestling Network is your number one stop shop for independent wrestling promotions across the world.
		[B]NOTE:[/B] This plugin requires that you have the YouTube plugin installed also.</description>
    </extension>

</addon>

<addon id="plugin.video.potterstouch"
       name="The Potter's Touch"
       version="1.0.0"
       provider-name="RayW1986">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               	library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>The Potter's Touch By Bishop T.D. Jakes</summary>
        <description>The Potter's Touch, a weekly program, with Bishop T.D. Jakes, tackles today's topics and confronts the hidden issues and invisible scars that go untreated. This broadcast carries healing and restoration into homes of hurting people, unearthing taboo topics and offering practical and spiritual solutions to life's toughest questions.</description>
    </extension>

</addon>

<addon id="repository.rayw1986" name="RayW1986 Repo" version="1.0" provider-name="rayw1986">
	<extension point="xbmc.addon.repository" name="RayW1986 Repository">
		<info compressed="false">http://raw.github.com/RayW1986/repository.rayw1986/master/addons.xml</info>
		<checksum>http://raw.github.com/RayW1986/repository.rayw1986/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/RayW1986/repository.rayw1986/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>RayW1986's Repository</summary>
		<description>RayW1986's Repository. Includes the Indy Wrestling Network.</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
